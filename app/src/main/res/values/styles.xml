<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->Dark
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- SimpleCardView style -->
    <style name="SimpleCardView">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="SimpleCardViewTitle" parent="SimpleCardView" >
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SimpleCardViewSubitle" parent="SimpleCardView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="SimpleCardViewDescription" parent="SimpleCardView" >
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
